# Database
DATABASE_URL=sqlite://./data/kol_database.db

# Redis
REDIS_URL=redis://localhost:6379

# Server
PORT=3000
NODE_ENV=development

# Scraping Settings
SCRAPE_DELAY_MIN=2000
SCRAPE_DELAY_MAX=10000
MAX_CONCURRENT_SCRAPES=2
RETRY_ATTEMPTS=3

# Proxy Settings (optional)
PROXY_URL=
PROXY_USERNAME=
PROXY_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Security
SESSION_SECRET=your-secret-key-here

# Schedule (cron format)
SCRAPE_SCHEDULE=0 0 * * 0